<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
    <tr>
        <th>Name</th>
        <th>Date</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
        <% @progress_reports.each do |p| %>
            <tr>

            <td><%= link_to p.name, progress_report_path(p) %></td>
        
            <td><%= p.date %></td>
            <% if current_user.id == p.user_id %>
                <td><%= link_to 'Edit This Entry', edit_progress_report_path(p) %></td>
            <% end %>

            </tr>
        <% end %>
    </tbody>
</table>
